        android:layout_width="83dp"
        android:layout_height="372dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="172dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:rotation="360"


