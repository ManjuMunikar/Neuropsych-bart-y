<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.datagrandeur.neuropsych.WelcomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="424dp"
        android:layout_height="353dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_instruction"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/balloon" />

    <Button
        android:id="@+id/pump"
        android:layout_width="147dp"
        android:layout_height="75dp"
        android:text="PUMP"
        android:textColor="@android:color/white"
        android:textSize="30dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_instruction"
        android:layout_width="900dp"
        android:layout_height="350dp"
        android:background="@color/app_theme"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/pump_info"
        android:layout_width="783dp"
        android:layout_height="136dp"


        android:text="@string/pump"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:visibility="gone"



        app:layout_constraintBottom_toBottomOf="@+id/text_instruction"
        app:layout_constraintEnd_toEndOf="@+id/text_instruction"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="@+id/text_instruction"
        app:layout_constraintTop_toTopOf="@+id/text_instruction"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/next"
